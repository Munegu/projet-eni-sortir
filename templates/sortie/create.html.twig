{% extends 'base.html.twig' %}

{% block title %}
Creation Sortie
{% endblock %}

{% block main %}
<h1 class="text-center">Création sortie</h1>
<div class="container row">
    <div class="col-md-5">
        {{ form_start(sortieForm) }}
        <p>Nom de la sortie : {{ form_widget(sortieForm.nom) }}</p>
        <p>Date et heure de la sortie : {{ form_widget(sortieForm.dateHeureDebut) }}</p>
        <p>Date limite d'inscription : {{ form_widget(sortieForm.dateLimiteInscription) }}</p>
        <p>Nombre de places : {{ form_widget(sortieForm.nbInscriptionMax) }}</p>
    </div>
    <div class="col-md-5 offset-md-1">
        <p>Durée : {{ form_widget(sortieForm.duree) }}</p>
        <p>Description et infos : {{ form_widget(sortieForm.infosSortie) }}</p>
        <p>Site organisateur : {{ app.user.siteRattache.nom }}</p>
        <p>Lieu : {{ form_widget(sortieForm.lieu) }}
            <button type="button" class="btn btn-secondary mt-2" data-toggle="modal" data-target="#exampleModal">
                Créer lieu
            </button>
        </p>
    </div>
    </div>
    <div class="container text-center mt-5">
        <p > {{ form_widget(sortieForm.enregistrer) }}
        {{ form_widget(sortieForm.publier) }}<a href="{{ path("main_accueil") }}" class="btn btn-primary ml-1">Annuler</a>
        </p>
    </div>
    {{ form_end(sortieForm) }}


    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    {{ form_start(lieuForm) }}
                    {{ form_widget(lieuForm) }}
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                    <button type="submit" class="btn btn-primary" >Enregistrer</button>
                    {{ form_end(lieuForm) }}
                </div>
            </div>
        </div>
    </div>
    <script>

    </script>
{% endblock %}

